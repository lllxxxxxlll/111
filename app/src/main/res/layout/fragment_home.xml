<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textColor="@color/color_on_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/tv_home_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/home_subtitle"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/color_on_surface_variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardBackgroundColor="@color/color_surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/color_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/tv_feature_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_card_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="@color/color_on_surface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_feature_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/feature_card_desc"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_surface_variant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_feature_title" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_enter_feature"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:minHeight="52dp"
                        android:text="@string/enter_feature"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_nav_home"
                        app:iconPadding="10dp"
                        app:iconTint="@color/color_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_feature_desc"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="1dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_synonym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardBackgroundColor="@color/color_surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/color_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/tv_syn_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/synonym_card_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="@color/color_on_surface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_syn_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/synonym_card_desc"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_surface_variant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_syn_title" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_synonym_compare"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:minHeight="52dp"
                        android:text="@string/enter_synonym_compare"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_nav_home"
                        app:iconPadding="10dp"
                        app:iconTint="@color/color_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_syn_desc"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="1dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_photo_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardBackgroundColor="@color/color_surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/color_outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/tv_photo_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/photo_search_card_title"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="@color/color_on_surface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_photo_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/photo_search_card_desc"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/color_on_surface_variant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_photo_title" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_photo_search"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:minHeight="52dp"
                        android:text="@string/enter_photo_search"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/ic_nav_home"
                        app:iconPadding="10dp"
                        app:iconTint="@color/color_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_photo_desc"
                        app:strokeColor="@color/color_primary"
                        app:strokeWidth="1dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

